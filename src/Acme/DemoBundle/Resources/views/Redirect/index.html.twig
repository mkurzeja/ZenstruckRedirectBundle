<h1>Redirect list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Source</th>
            <th>Destination</th>
            <th>Statuscode</th>
            <th>Count</th>
            <th>Lastaccessed</th>
            <th>Id</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('redirect_show', { 'id': entity.id }) }}">{{ entity.source }}</a></td>
            <td>{{ entity.destination }}</td>
            <td>{{ entity.statusCode }}</td>
            <td>{{ entity.count }}</td>
            <td>{% if entity.lastAccessed %}{{ entity.lastAccessed|date('Y-m-d H:i:s') }}{% endif%}</td>
            <td>{{ entity.id }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('redirect_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('redirect_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('redirect_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
