<h1>Redirect</h1>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Source</th>
            <td>{{ entity.source }}</td>
        </tr>
        <tr>
            <th>Destination</th>
            <td>{{ entity.destination }}</td>
        </tr>
        <tr>
            <th>Statuscode</th>
            <td>{{ entity.statusCode }}</td>
        </tr>
        <tr>
            <th>Count</th>
            <td>{{ entity.count }}</td>
        </tr>
        <tr>
            <th>Lastaccessed</th>
            <td>{{ entity.lastAccessed|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('redirect') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('redirect_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('redirect_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
